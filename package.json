{
  "name": "roadshow",
  "private": true,
  "type": "module",
  "description": "Rendering app layouts using SHACL and lit-html",
  "scripts": {
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore",
    "test": "wtr",
    "test:ssr": "wsrun -p ssr-test -c test",
    "postinstall": "husky install; patch-package; yarn-deduplicate",
    "build": "wsrun -m -c prepack",
    "release": "changeset publish",
    "prepare": "npx yarn-deduplicate"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/cli": "^2.21.1",
    "@open-wc/eslint-config": "^4.2.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@tpluscode/eslint-config": "^0.3.4",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.0",
    "eslint": "^8.33.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lit-a11y": "^2.3.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-require-extensions": "^0.1.1",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "patch-package": "^7.0.0",
    "rdfjs-eds-plugin": "^0.1.1",
    "standard": "^17.0.0",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.5.2",
    "wsrun": "^5.2.4",
    "yarn-deduplicate": "^3.1.0"
  },
  "repository": "git@github.com:hypermedia-app/roadshow.git",
  "author": "Tomasz Pluskiewicz <awesome@hypermedia.app>",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
